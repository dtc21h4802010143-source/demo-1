# Copy this file to `.env` and fill in your values
# Example: cp .env.example .env

# =================================
# Cấu hình Chatbot RAG + LLM
# =================================

# Chế độ chatbot: true = RAG+LLM, false = TF-IDF fallback
USE_RAG_CHATBOT=true

# LLM Provider: 'openai', 'gemini', hoặc 'auto' (tự chọn)
LLM_PROVIDER=auto

# OpenAI API Key (nếu dùng GPT-3.5/GPT-4)
# Lấy tại: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key (nếu dùng Gemini - MIỄN PHÍ)
# Lấy tại: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-gemini-api-key-here

# =================================
# Flask
# =================================
SECRET_KEY=change-me-in-production
FLASK_ENV=development
DEBUG=True

# Database (SQLite default stored under data/)
DATABASE_URL=sqlite:///data/admission_system.db

# Admin defaults
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Chatbot
CHATBOT_KNOWLEDGE_BASE=data/chatbot_knowledge_new.json

# Uploads
UPLOAD_FOLDER=static/uploads

# SMTP (Gmail example)
# NOTE: For Gmail, enable 2-Step Verification and use an App Password here (NOT your login password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-16-chars
MAIL_DEFAULT_SENDER=Admissions <your-email@gmail.com>